<!DOCTYPE html>
<html lang="en" ng-app="spendingsApp">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link rel="stylesheet" type="text/css" href="public/components/angular/angular-csp.css">
    <link rel="stylesheet" type="text/css" href="public/components/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="public/css/spending_monitor.css">
    <title>Index - SpendingMonitor</title>
</head>
<body ng-controller="spendingsCtrl">
    <%- include('header_logged_in', {username: user.username}) %>
    <div class="container">
        <div class="form-group">
            <div class="row">
                <div class="col-xs-12 col-sm-3">
                    <div class="input-group">
                        <input class="form-control" uib-datepicker-popup="yyyy.MM.dd" is-open="status.datePickerOpened" ng-model="formdata.date" ng-click="openDatePicker($event)" readonly />
                        <label class="input-group-addon btn" ng-click="openDatePicker($event)">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </label>
                    </div> <!-- .input-group -->
                </div> <!-- .col-xs-12 .col-sm-2 -->

                <div class="col-xs-12 col-sm-4">
                    <input class="form-control" ng-model="formdata.item" type="text" placeholder="Add new item">
                </div> <!-- .col-xs-12 .col-sm-4 -->

                <div class="col-xs-12 col-sm-2">
                    <select class="form-control" ng-model="formdata.category">
                        <option value="Food" >Food</option>
                        <option value="Medical">Medical</option>
                        <option value="Entertainment">Entertainment</option>
                        <option value="Other" selected>Other</option>
                    </select>
                </div> <!-- .col-xs-12 .col-sm-3 -->

                <div class="col-xs-12 col-sm-3">
                    <div class="input-group">
                        <input class="form-control" ng-model="formdata.amount" type="number" placeholder="Amount" />
                        <div class="input-group-btn">
                            <button class="btn btn-primary" ng-click="addSpending()">
                                Add
                                <span class="glyphicon glyphicon-pencil"></span>
                            </button>
                        </div> <!-- .input-group-btn -->
                    </div> <!-- .input-group -->
                </div> <!-- .col-xs-12 .col-sm-6 -->
            </div> <!-- .row -->
        </div> <!-- .form-group -->
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="text-center">
                    <div class="form-inline">
                        <label for="monthpicker">Choose a month: </label>
                        <div class="input-group">
                            <input class="form-control" uib-datepicker-popup="yyyy.MM" datepicker-mode="'month'" min-mode="'month'" is-open="status.monthPickerOpened" ng-model="spendingMonth" ng-change="monthChanged()" ng-click="openMonthPicker($event)" readonly />
                            <label class="input-group-addon btn" ng-click="openMonthPicker($event)">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </label>
                        </div> <!-- .input-group -->
                    </div> <!-- .form-inline -->
                </div> <!-- .text-center -->
            </div> <!-- .panel-body -->

            <table class="table table-striped table-hover table-condensed table-responsive" ng-cloak>
                <thead class="thead thead-inverse">
                    <tr>
                        <th>Date</th>
                        <th>Item</th>
                        <th>Category</th>
                        <th>Amount</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="spending in spendings track by spending._id">
                        <td>{{ spending.date | date:'yyyy.MM.dd'}}</td>
                        <td>{{ spending.item }}</td>
                        <td>{{ spending.category }}</td>
                        <td>{{ spending.amount }}</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button class="btn btn-sm btn-default">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </button>
                                <button class="btn btn-sm btn-default" ng-click="deleteSpending(spending)">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </button>
                            </div> <!-- .btn-group -->
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="panel-footer" ng-cloak>
                <div class="text-center">
                    <b>Total amount of spending: {{ total_amount }}</b>
                </div> <!-- .text-center -->
            </div> <!-- .panel-footer -->
        </div> <!-- .panel .panel-default -->
    </div> <!-- .container --->

    <script type="text/javascript" src="public/components/angular/angular.js"></script>
    <script type="text/javascript" src="public/components/angular-bootstrap/ui-bootstrap.js"></script>
    <script type="text/javascript" src="public/components/angular-bootstrap/ui-bootstrap-tpls.js"></script>
    <script type="text/javascript" src="public/js/spendings.js"></script>
</body>
</html>
